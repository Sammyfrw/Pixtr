<h2>New login session..</h2>
<%= form_for :session, url: session_path do |form| %>
<div>
  <%=form.label :email%>
  <%=form.text_field :email%>
</div>

<div>
  <%=form.label :password%>
  <%=form.password_field :password%>
</div>

<div>
  <%=form.label :password_confirmation%>
  <%=form.password_field :password_confirmation%>

<div>
  <%= form.submit "Sign in"%>
</div>


<%end%>
