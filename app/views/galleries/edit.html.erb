<p><%="Edit #{@gallery.name}"%></p>

<%= form_for @gallery, url: "/galleries/#{@gallery.id}" do |form| %>
  <div>
    <%= form.label :name%>
    <%= form.text_field :name %>
  </div>

  <div>
      <%= form.label :description%>
      <%= form.text_area :description %>
  </div>

<%= form.submit "Edit gallery"%>
  
<% end%>

